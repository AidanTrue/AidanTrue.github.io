{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global Temperature Annomalies",
    "subtitle": "",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://www.ncdc.noaa.gov/cag/global/time-series/globe/land/all/8/2006-2021/data.csv",
    "format": {"type": "csv"}
  },
  
  "height": 300,
  "width": 310,
  "mark": {"type": "line", "point": false},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "quantitative",
      "title": "Year & Month",
      "axis": {"grid": true}
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Temperature (Degrees Celsius)",
      "axis": {"grid": true}
    }

    }
  }
