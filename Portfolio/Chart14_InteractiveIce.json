{"$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  
  "description": "Coronavirus cases",
  
  "data": {
    "url": "https://raw.githubusercontent.com/AidanTrue/AidanTrue.github.io/main/Sea%20Ice%20Extent%20(N%26S).csv",
    "format": {"type": "csv", "parse":{"UTC Time":"utc:'%d %m %Y'"}}},

  "title": {
    "text": "Sea Ice Extent for North & South Poles",
    "fontSize":17,
    "subtitle":["Source: Fetterer, F., K. Knowles, W. N. Meier, M. Savoie, and A. K. Windnagel. 2017. Sea Ice Index, Version 3. Boulder, Colorado USA.","NSIDC: National Snow and Ice Data Center."],
    "subtitleFontStyle":"italic",
    "subtitleFontSize":12,
    "anchor": "start",
    "color": "black"
  },



  "height": 300,
  
  "width": 700,

  "background": null,
  
  "mark": {"type": "line"},

  "selection": {
    "Region: ": {
      "type":"single",
      "fields": ["Region"],
      "bind": {
        "input": "radio",
        "options": [
          "North",
          "South",
          "Combined"
        ],
        "name": "Region: "
      }
    },
    "Measure: ": {
      "type": "single",
      "fields": ["Measure"],
      "bind": {
        "input": "radio",
        "options": [
          "Extent",
          "Area"
        ],
        "name": "Measure: "
      }
    }
    
},
  "transform": [
{"filter": {
        "selection": "Region: "}},
{"filter": {
        "selection": "Measure: "}},
{"filter": {
        "field": "Value", "gt":0}}

  
        ],
  "encoding": {
    "x": {"field": "UTC Time", "type": "temporal", "title": "Date"},
    "y": {
      "field": "Value",
      "type": "quantitative",
      "scale": {"domain": [0, 30]},
      "title": "Millions of square kilometers"
    },
      "tooltip": [
            {"field": "Measure"},
            {"field": "Region"},
            {"field": "UTC Time","timeUnit":"yearmonth"},
            {"field": "Value"}],
            
    "color":{
      "field": "Region",
      "type": "nominal",
      "legend":{"aria":true},
      "scale": {"scheme": "purples"}
    }
    }
  }

