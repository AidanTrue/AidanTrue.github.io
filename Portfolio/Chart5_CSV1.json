{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "New COVID Cases",
    "fontSize":17,
    "subtitle": "Number of new COVID cases by date",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/AidanTrue/AidanTrue.github.io/main/ltla_2021-10-13.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": {
        "field": "areaName",
        "oneOf": ["Birmingham", "Glasgow City", "Liverpool", "Manchester"]
      }
    }
  ],
  "height": 300,
  "width": 310,

  "background": null,
  
  "mark": {"type": "line", "point": false},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
      
    },
    "y": {
      "field": "newCasesBySpecimenDate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}

    },
    "color":{
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "set1"},
      "title": "Legend",
      "legend": {"orient": "top-left", "fillColor": "rgb(222, 250, 255)", "padding":{"expr": "5"},"cornerRadius":{"expr": "10"}}
    }
  }
}